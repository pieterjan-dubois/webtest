// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  lastname String
  address  String
  email    String  @unique
  password String
  loans    Loan[]
}

model Loan {
  id        Int    @id @default(autoincrement())
  title     String
  author    String
  begindate DateTime
  enddate   DateTime
  userId    Int?
  user      User?  @relation(fields: [userId], references: [id])
}